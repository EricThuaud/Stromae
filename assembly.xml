            <directory>${project.basedir}/insee-overload/default</directory>
            <includes>
                <include>./**/**</include>
            </includes>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/stromae-logging/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>WEB-INF/lib</outputDirectory>
        </fileSet>
    </fileSets>
